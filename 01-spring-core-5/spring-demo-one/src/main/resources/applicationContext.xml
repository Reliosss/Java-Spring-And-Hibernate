<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- common beans -->
    <bean id="newCoach" class="ArmwrestlingCoach"></bean>
    <bean id="myFortune" class="HappyFortuneService"></bean>

    <!-- constructor injection -->
    <bean id="myCoach" class="TrackCoach">
        <!-- Setup the constructor injection-->
        <constructor-arg  ref="myFortune"/>
    </bean>

    <!-- setter injection -->
    <bean id="myCricketCoach" class="CricketCoach">
        <!-- set up setter injection-->
        <property name="fortuneService" ref="myFortune" />

        <!-- inject literal values-->
        <property name="emailAddress" value="thebestcoach@fat.it" />
        <property name="team" value="Fats guys!" />
    </bean>
</beans>





